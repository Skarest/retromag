		<text name="md_description">
			<fontSize>0.018</fontSize>
			<color>434343</color>     
			<pos>0.65 0.58</pos>
			<size>0.24 0.2</size>
			<zIndex>5</zIndex>         
		</text>
		<text name="md_name">
			<fontSize>0.025</fontSize>
