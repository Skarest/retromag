<theme>
  <formatVersion>7</formatVersion>

<view name="basic, detailed, video">
		
		<image name="background" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>        
			<path>./_inc/images/backgroundmenu_detail.png</path>
			<zIndex>2</zIndex>         
		</image> 
		
		<image name="background_highl" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>        
			<path>./_inc/images/backgroundmenu_highl.png</path>
			<zIndex>12</zIndex>         
		</image>
		
		<image name="syslogo" extra="true">
			<path>./_inc/logos/${system.theme}.png</path>
			<pos>0.1 0.4</pos>
			<color>FAAAAAAA</color>
			<maxSize>0.25</maxSize>
			<rotation>-90</rotation>
			<zIndex>3</zIndex> 
		<storyboard>
        		<!-- <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/> -->
        		<animation property="opacity" from="0" to="0.25" duration="5500" mode="linear"/>
        		<!-- <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/> -->
		</storyboard>			

		</image>
		<text name="installed" extra="true">
			<text>${installed}</text>
			<pos>0.035 0.02</pos>
			<color>${grey2}</color>
			<fontPath>${font1}</fontPath>
			<fontSize>0.03</fontSize>
			<forceUppercase>1</forceUppercase>
			<alignment>left</alignment>
			<zIndex>7</zIndex> 
		</text>				
		<textlist name="gamelist">      
			<selectorColor>${iconColor}</selectorColor>                     
			<pos>0.033 0.077</pos>
			<size>0.25 0.8</size>
			<selectedColor>434343</selectedColor>
			<primaryColor>${grey2}</primaryColor>
			<secondaryColor>${iconColor}</secondaryColor>
		    <fontPath>${font1}</fontPath>
			<fontSize>0.025</fontSize>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./_inc/scroll.wav</scrollSound>
			<alignment>left</alignment>
			<zIndex>5</zIndex>                          
		</textlist>
				
		<text name="inhalt" extra="true">
			<text>${inhalt}</text>
			<pos>0.666 0.526</pos>
			<color>${grey2}</color>
			<fontPath>${font1}</fontPath>
			<fontSize>0.0235</fontSize>
			<forceUppercase>1</forceUppercase>
			<alignment>left</alignment>
			<zIndex>5</zIndex> 
		</text>		
<!-- Spieledetails Formatierung Detailseite -->

		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_lbl_players, md_name">
			<color>${fontColor}</color>
		    <fontPath>${font1}</fontPath>
			<fontSize>0.018</fontSize>
			<size>0.2 0.035</size>
			<zIndex>5</zIndex>                  
		</text>
		<text name="md_developer, md_publisher, md_genre, md_playcount, md_lastplayed, md_description, md_players, md_releasedate">
			<color>${fontColor}</color>
		    <fontPath>${font2}</fontPath>
			<fontSize>0.018</fontSize>
			<size>0.2 0.035</size>
			<zIndex>5</zIndex>                  
		</text>
		
